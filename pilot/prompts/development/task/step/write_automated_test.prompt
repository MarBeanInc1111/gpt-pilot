{% assign has_files = files | length > 0 %}

{% if has_files %}
  <p>Here are the requested files:</p>
  <ul>
    {% for file in files %}
      <li>
        <strong>{{ file.name }}</strong>
        {% if file.content %}
          <pre><code>{{ file.content }}</code></pre>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% else %}
  <p>Currently, no tests are written.</p>
{% endif %}

<p>Now, start with the implementation of the automated test (or tests).</p>

{% comment %}
COMMAND: {command_that_needs_to_be_ran}
{% endcomment %}

FILES_CHANGED: []
