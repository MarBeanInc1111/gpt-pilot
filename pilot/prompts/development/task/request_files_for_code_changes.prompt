{% set relevant_files = [] %}
{# Iterate over the instructions and find the relevant files for the changes #}
{% for instruction in instructions %}
  {% for file_change in instruction.file_changes %}
    {% set relevant_files = relevant_files + [file_change.file] %}
  {% endfor %}
{% endfor %}

{# Remove any duplicates from the list of relevant files #}
{% set relevant_files = relevant_files | unique %}

{# Ask for the relevant files #}
{% if relevant_files | length > 0 %}
  <!— REQUEST FILES —>
  Please provide the following files relative to the project root so that I can make the necessary changes:
  {% for file in relevant_files %}
    - {{ file }}
  {% endfor %}
{% else %}
  <!— NO FILES REQUIRED —>
  No files are required for this step.
{% endif %}

{# Display the current step #}
{% if step_index != 0 %}
  So far, steps {{ finished_steps }} are finished, now let's move on to step #{{ step_index }} - "{{ step_description }}".
{% else %}
  Let's start with step #{{ step_index }} - "{{ step_description }}".
{% endif %}
